                            +checkbox('apartment_civil-liability', 'apartment_civil-liability', 'Гражданская ответственность', '', true).--range.js-toggle-range
                        
                        +e.range-wrapper
                            +e('input')(
                                data-min="100000",
                                data-max="500000"
                            ).range.js-range-slider
                        
                        +e.input
                            +input('apartment_civil-liability-input', 'text', '', 'apartment_civil-liability-input', 'js-range-input').--calc(disabled)
                +e.group
                    include section/ui-kit/checkbox.pug
                    +checkbox('apartment_rent', 'apartment_rent', 'Квартира сдается в аренду', '', true).js-rent-check
                +e.group
                    +slidedown('От каких рисков застраховано').--column.js-slidedown.js-rent-condition
                        +slideDownCheck('apartment_fire', 'Пожар')
                        +slideDownCheck('apartment_natural-disaster', 'Стихийное бедствие')
                        +slideDownCheck('apartment_effect-fluid', 'Воздействие жидкости')
                        +slideDownCheck('apartment_explosion', 'Взрыв')
                        +slideDownCheck('apartment_mechanical-damage', 'Механические повреждения')
                        +slideDownCheck('apartment_illegal-action', 'Противоправные действия')
                        +slideDownCheck('apartment_lightning-strike', 'Удар молнии')
                        
                        
                        

                +e.group
                    +slidedown('Особые условия').js-slidedown
                        +slideDownCheck('apartment_fire-alarm', 'В квартире установлена пожарная сигнализация')
                        +slideDownCheck('apartment_burglar-alarm', 'В квартире установлена охранная сигнализация')
                        +slideDownCheck('apartment_control-system', 'В квартире установлена система контроля утечек и автоматического перекрытия водоснабжения')

                +e.group
