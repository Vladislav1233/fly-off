//- Используем стандартный шаблон Project
extends ./template/base_layout

include ./section/ui-kit/radio
include ./section/ui-kit/input
include ./section/ui-kit/checkbox
include ./section/ui-kit/button
include ./section/tab
include ./section/slidedown

block variables
    - var file_name = 'calculator'

//- Модифицируем head
block head
    - var pageTitle = 'Калькулятор';

//- Выводим попапы
block popup

//- Выводим content
block content
    +b('section').calculator-page
        +e('a')(href="#", title="Назад").back 
            <svg width="73" height="28" viewBox="0 0 73 28" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M1.5 14H72.5M1.5 14L14.5 1M1.5 14L14.5 27" stroke="#41B6E6"/>
            </svg>
            | Назад
        +tab()

        +e('section').content#tab-1
            +e('h1').title Рассчитать страховку для выезда за границу

            +e('form').form
                +e.group
                    +e.group-name Тип полиса
                
                    +radio([{
                        id: 'travel_for-trip',
                        name: 'travel_type-police',
                        text: 'На одну поездку'
                    }, {
                        id: 'travel_annual-policy',
                        name: 'travel_type-police',
                        text: 'Годовой полис'
                    }]) 
                
                +e.group-inline
                    +e.group.--inline
                        +e.group-name Период поездки, с
                        //- input(id, type, placeholder, name, value, autocomplete, error, label)
                        +input('travel_start-period', 'tel', 'дд.мм.гг', 'travel_start-period').--calc

                    +e.group.--inline
                        +e.group-name Период поездки, по
                        +input('travel_end-period', 'tel', 'дд.мм.гг', 'travel_end-period').--calc

                +e.group
                    +e.group-name Страна поездки
                    +input('travel_country', 'text', '', 'travel_country').--calc

                    +e.checkbox-group
                        +e.checkbox-item
                            //- checkbox(name, id, title, js)
                            include section/ui-kit/checkbox.pug
                            +checkbox('travel_schengen-countries', 'travel_schengen-countries', 'Страны Шенгенского Соглашения')
                        +e.checkbox-item
                            include section/ui-kit/checkbox.pug
                            +checkbox('travel_active-recreation', 'travel_active-recreation', 'Активный отдых', '', true)
                        +e.checkbox-item
                            include section/ui-kit/checkbox.pug
                            +checkbox('travel_already-traveling', 'travel_already-traveling', 'Уже путешествую')

                +e.group.js-place-more
                    +e.block-clone.js-block-more
                        +e.group-name Возраст <span class="js-count-traveler">1</span>-го путешественника
                    
                        +radio([{
                            id: 'travel_age-min',
                            name: 'travel_count-traveler',
                            text: 'от 1 до 3 лет'
                        }, {
                            id: 'travel_age-medium',
                            name: 'travel_count-traveler',
                            text: 'от 4 до 28 лет'
                        }, {
                            id: 'travel_age-large',
                            name: 'travel_count-traveler',
                            text: 'от 29 до 65 лет'
                        }]).--large
                
                +e.group
                    +e.button
                        +button('a', '+ добавить путешественника').--font-small.js-button-more

                +e.group
                    +e.group-name Промокод если есть
                    +input('travel_promocode', 'text', '', 'travel_promocode').--calc

                +e.button
                    +button('button', 'Рассчитать').--font-small

        
        +e('section').content#tab-2
